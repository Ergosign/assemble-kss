<div class="kss-modifier__wrapper">
    <div class="kss-modifier__heading kss-style">Example
        <div class="kss-modifier__heading--srcPath">{{srcPath}}</div>
    </div>
    {{~#if variations}}
        <div class="kss-modifier__default-name kss-style">Default styling</div>
    {{/if~}}
    <div class="kss-modifier__example kss-wrapper
                        {{~#each properties.wrapper-classes}} kss-wrapper--{{this}}{{/each~}}
                     ">
        {{{markupWithStyle}}}
    </div>
    {{~#if variations~}}
        Variations: <select class="modifier-select">
        <option value="-">No Variations</option>
        <option value="all">All Variations</option>
        {{~#each variations~}}
            <option value="{{variationName}}">{{variationDescription}}</option>
        {{~/each~}}
    </select>

        <div>
            {{#eachVariation}}
                <div class="kss-modifier__container">
                    <div class="kss-modifier__name kss-style">
                        {{~variationName~}}
                    </div>
                    <div class="kss-modifier__description kss-style">
                        {{~variationDescription~}}
                    </div>
                    <div class="kss-modifier__example kss-wrapper
                                            {{~#each properties.wrapper-classes}} kss-wrapper--{{this}}{{/each~}}
                                        ">
                        {{{markupWithStyle}}}
                    </div>
                </div>
            {{/eachVariation}}
        </div>
    {{/if}}
</div>
